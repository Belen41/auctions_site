<h1>Wellcome <%=@user.name%> to Auction Site</h1>
<h2>List of Products</h2>
<ul>
  <% @products.each do |product| %>
  <li>
    <a href= "/users/<%=@user.id%>/products/<%=product.id%>/show"><%=product.title%></a>
    <% product.bids.each do |bid| %>
    Bid: <%= bid.amount %>
    User: <%= User.find(bid.user_id).name%>
    <% end %> &nbsp;&nbsp;
  </li>
  <% end %>
</ul>
<br>
<br>
<%=link_to "Your Product Page", "/users/#{@user.id}/show" %>
<%= link_to "Add a new product", "/users/#{@user.id}/products/new" %>
