<h1>Product page</h1>
<h2><%= @user.name %></h2>
<ul>
  <% @products.each do |product| %>
  <li>
  Title: &nbsp; <%= product.title %> &nbsp;
  Description: &nbsp; <%= product.description %> &nbsp;&nbsp;
  Deadline: &nbsp; <%= product.deadline %> &nbsp;&nbsp;
  <%= button_to "Delete", "/users/#{@user.id}/products/destroy", :method=>"get" %>
</li>
  <% end %>
</ul>
<br>
<br>

<%= link_to "Add a new product", "/users/#{@user.id}/products/new" %>
